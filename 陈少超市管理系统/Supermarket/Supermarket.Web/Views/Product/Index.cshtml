
@{
    ViewBag.Title = "商品管理";
    ViewBag.MapIcon = "fa fa-product-hunt";
    ViewBag.Map1 = "商品管理";
    ViewBag.Map2 = "商品列表";
}
<script src="~/Content/script/Product/Product.js"></script>
<div>
    <form class="well">
        <label>商品名称</label> &nbsp;
        <input type="text" style="font-size:12px;height:25px;" id="searchProductNmae" placeholder="请输入商品名称">
        <label style="margin-left:100px;">商品类别</label> &nbsp;
        <select name="RoleID" style="width:190px;" id="ProductType">
            <option value="0">请选择</option>
        </select>
        <label style="margin-left:100px;">商品状态</label> &nbsp;&nbsp;
        <input id="rbIsDel2" type="radio" name="IsDelete" checked="checked" value="2" />全部&nbsp;&nbsp;
        <input id="rbIsDel0" type="radio" name="IsDelete" value="0" />上架&nbsp;&nbsp;
        <input id="rbIdDel1" type="radio" name="IsDelete" value="1" />下架
        <button type="button" style="margin-left:150px;" id="btn_query" class="btn btn-primary fa fa-search"> 查 询 </button>
    </form>
</div>
<table id="Product" class="table"></table>
<div id="toolbar" class="btn-group">
    <button id="btn_edit" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 编 辑
    </button>
    <button type="button" class="ProductOut btn btn-default">
        <span class="fa fa-repeat" aria-hidden="true"></span> 下 架
    </button>
    <button type="button" class="ProductIn btn btn-default" style="display:none">
        <span class="fa fa-undo" aria-hidden="true"></span> 上 架
    </button>
</div>

<form id="form" method="post">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top:120px;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">修改商品信息</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="txt_rolename">商品名称</label>
                        <input type="text" name="ProductName" class="form-control" id="txt_ProductName" placeholder="商品名称">
                    </div>
                    <div class="form-group">
                        <label for="txt_roledesc">出售价格</label>
                        <input type="text" name="CommodityPriceOut" class="form-control" id="txt_CommodityPriceOut" placeholder="出售价格">
                    </div>
                    <div class="form-group">
                        <label for="txt_defaulturl">商品状态</label>&nbsp;&nbsp;&nbsp;&nbsp;
                        <input id="rb_IsDel0" type="radio" name="IsDelete" value="0" />上架&nbsp;&nbsp;
                        <input id="rb_IsDel1" type="radio" name="IsDelete" value="1" />下架
                    </div>
                    <div class="form-group">
                        <label for="txt_roledesc">商品描述</label>
                        <input type="text" name="CommodityDepict" class="form-control" id="txt_CommodityDepict" placeholder="简介">
                    </div>
                    <div class="form-group hidden">
                        <label for="txt_roledesc">商品编号</label>
                        <input type="text" name="ProductID" class="form-control" id="txt_ProductID" placeholder="商品编号">
                    </div>
                    <div class="form-group">
                        <label style="font-size:12px;color:red;" id="lbl_error"></label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default fa fa-close" data-dismiss="modal"> 关闭</button>
                    <button type="button" id="btn_submit" class="btn btn-primary fa fa-save"> 保存</button>
                </div>
            </div>
        </div>
    </div>
</form>
