
@{
    ViewBag.Title = "会员管理";
    ViewBag.MapIcon = "fa fa-user-circle";
    ViewBag.Map1 = "会员管理";
    ViewBag.Map2 = "会员列表";
}
<script src="~/Content/script/User/User.js"></script>
<form class="well">
    <label>姓名</label> &nbsp;
    <input type="text" style="font-size:12px;height:25px;" id="searchName"  placeholder=" 请输入姓名">
    <label style="margin-left:100px;">会员卡号</label> &nbsp;
    <input type="text" style="font-size:12px;height:25px;" id="searchCard"  placeholder=" 请输入卡号">
    <button type="button" style="margin-left:150px;" id="btn_query" class="btn btn-primary fa fa-search"> 查 询 </button>
</form>

<table id="User" class="table"></table>
<div id="toolbar" class="btn-group">
    <button id="btn_add" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 新 增
    </button>
    <button id="btn_edit" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 编 辑
    </button>
    <button id="btn_delete" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 删 除
    </button>
</div>
<form id="form" method="post">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top:120px;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">添加会员信息</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="txt_rolename">会员姓名</label>
                        <input type="text" name="UserName" class="form-control" id="txt_UserName" placeholder="会员姓名">
                    </div>
                    <div class="form-group">
                        <label for="txt_roledesc">身份证号</label>
                        <input type="text" name="IDNumber" class="form-control" id="txt_IDNumber" placeholder="身份证号码">
                    </div>
                    <div class="form-group">
                        <label for="txt_defaulturl">性别</label>&nbsp;
                        <input id="rd_Sex0" type="radio" name="Sex" value="0" checked="checked"/>男&nbsp;&nbsp;
                        <input id="rd_Sex1" type="radio" name="Sex" value="1" />女
                    </div>
                    <div class="form-group">
                        <label for="txt_defaulturl_Web">年龄</label>
                        <input type="text" name="Age" class="form-control" id="txt_Age" placeholder="年龄在0~150之间,可为空">
                    </div>
                    <div class="form-group">
                        <label for="txt_roledesc">消费密码</label>
                        <input type="text" name="UserPassWord" class="form-control" id="txt_UserPassWord"  placeholder="消费密码位六位，可为空">
                    </div>
                    <div class="form-group hidden">
                        <label for="txt_roledesc">会员编号</label>
                        <input type="text" name="UserID" class="form-control" id="txt_UserID" placeholder="">
                    </div>
                    <div class="form-group hidden">
                        <label for="txt_roledesc">会员卡号</label>
                        <input type="text" name="CardID" class="form-control" id="txt_CardID" placeholder="">
                    </div>
                    <div class="form-group">
                        <label style="font-size:12px;color:red;" id="lbl_error"></label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default fa fa-close" data-dismiss="modal"> 关闭</button>
                    <button type="button" id="btn_submit" class="btn btn-primary fa fa-save"> 保存</button>
                </div>
            </div>
        </div>
    </div>
</form>

