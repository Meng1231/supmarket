@model Supermarket.EneityFramework.AdminInfo

@{
    ViewBag.Title = "管理员维护";
    ViewBag.MapIcon = "fa fa-user";
    ViewBag.Map1 = "管理员维护";
    ViewBag.Map2 = "管理员列表";
}

<script src="~/Content/script/AdminInfo/AdminInfo.js"></script>

<div class="panel-body" style="padding-bottom:0px;">
    <div>
        <form class="well">
            <label>角色名称</label> &nbsp;
            <select name="RoleID" style="width:190px;" id="RoleName">
                <option value="0">全部</option>
            </select>
            <label style="margin-left:50px;">用户名</label> &nbsp;&nbsp;
            <input id="text_UserName" name="UserName" />  
            <button type="button" style="margin-left:150px;" id="btn_query" class="btn btn-primary fa fa-search"> 查 询 </button>
        </form>
    </div>
    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 新 增
        </button>
        <button id="btn_edit" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 编 辑
        </button>
        <button id="btn_delete" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 删 除
        </button>
    </div>
    <table id="tb_departments"></table>
</div>

<form id="form" method="post">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top:120px">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">新增</h4>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="txt_rolename">角色名称</label>
                        <select name="RoleID" style="width:190px;" id="order_status2" class="form-control selectpicker" title="请选择">
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="txt_roledesc">用户名</label>
                        <input type="text" name="UserName" class="form-control" id="txt_UserName" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="txt_defaulturl">账号</label>
                        <input type="text" name="Account" class="form-control" id="txt_Account" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="txt_defaulturl_Web">密码</label>
                        <input type="text" name="PassWord" class="form-control" id="txt_PassWord" placeholder="">
                    </div>
                    <div class="form-group hidden">
                        <label for="txt_roledesc">用户编号</label>
                        <input type="text" name="AdminID" class="form-control" id="txt_AdminID" placeholder="">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default fa fa-close" data-dismiss="modal"> 关闭</button>
                    <button type="button" id="btn_submit" class="btn btn-primary fa fa-save" data-dismiss="modal"> 保存</button>
                </div>
            </div>
        </div>
    </div>
</form>