
@{
    ViewBag.Title = "入库信息";
    ViewBag.MapIcon = "fa fa-edit";
    ViewBag.Map1 = "库存管理";
    ViewBag.Map2 = "入库信息";
}
<script src="~/Content/script/Purchases/Purchases.js"></script>
<div>
    <form class="well">
        <label>进货经手人</label> &nbsp;
        <select name="AdminID" style="width:190px;" id="AdminName">
            <option value="0">全部</option>
        </select>
        <label style="margin-left:50px;">进货时间</label> &nbsp;&nbsp;
        <input id="StarTime" class="Wdate" style="cursor:pointer" onfocus="WdatePicker()" />
        <label>至</label>
        <input id="EndTime" class="Wdate" style="cursor:pointer" onfocus="WdatePicker()" />
        <button type="button" style="margin-left:150px;" id="btn_query" class="btn btn-primary fa fa-search"> 查 询 </button>
    </form>
</div>
<table id="Purchases" class="table"></table>
<div id="toolbar" class="btn-group">
    <button id="btn_add" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 新 增
    </button>
    <button id="btn_edit" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 编 辑
    </button>
    <button id="btn_delete" type="button" class="btn btn-default">
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> 删 除
    </button>
</div>
<form id="form" method="post">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top:120px;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">添加进货信息</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="txt_rolename">进货总价</label>
                        <input type="text" name="PurchasesTotal" class="form-control" id="txt_PurchasesTotal" placeholder="会员姓名">
                    </div>
                    <div class="form-group">
                        <label for="txt_roledesc">备注</label>
                        <input type="text" name="Reamrk" class="form-control" id="txt_Reamrk" placeholder="身份证号码">
                    </div>
                    <div class="form-group hidden">
                        <label for="txt_defaulturl_Web">编号</label>
                        <input type="text" name="PurchasesID" class="form-control" id="txt_PurchasesID" placeholder="年龄在0~150之间,可为空">
                    </div>
                    <div class="form-group">
                        <label style="font-size:12px;color:red;" id="lbl_error"></label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default fa fa-close" data-dismiss="modal"> 关闭</button>
                    <button type="button" id="btn_submit" class="btn btn-primary fa fa-save"> 保存</button>
                </div>
            </div>
        </div>
    </div>
</form>
<form id="form" method="post">
    <div class="modal fade" id="DetailModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-top:120px;">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">进货详情</h4>
                </div>
                <div class="modal-body">
                    <table id="Detail" class="table"></table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default fa fa-close" id="detailtEdit" data-dismiss="modal"> 关闭</button>
                </div>
            </div>
        </div>
    </div>
</form>

